        <input class="form-control mb-3" type="text" name="address" value="{{ customer.address }}" required>

        <label for="permit_number" class="form-label required">permit_number</label>
        <input class="form-control mb-3" type="text" name="permit_number" value="{{ customer.permit_number }}" required>
        
        <button class="btn" type="submit">Update</button>
    </form>
    {{ include('customer/_delete_form.html.twig') }}
