{% extends 'base.html.twig' %}

{% block title %}Edit Customer{% endblock %}

{% block body %}
    <h1>Edit Customer</h1>
    <form method="post" class="form_mongo">
        {# <label for="id" class="form-label required">Customer id</label>
        <input class="form-control mb-3" type="text" name="id" value="{{ customer.id }}" required> #}

        <label for="first_name" class="form-label required">first_name</label>
        <input class="form-control mb-3" type="text" name="first_name" value="{{ customer.first_name }}" required>

        <label for="second_name" class="form-label required">second_name</label>
        <input class="form-control mb-3" type="text" name="second_name" value="{{ customer.second_name }}" required>
        
