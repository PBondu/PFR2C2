{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer._id }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ customer.first_name }}</td>
            </tr>
            <tr>
                <th>Second Name</th>
                <td>{{ customer.second_name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>Permit Number</th>
                <td>{{ customer.permit_number }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_edit', {'id': customer._id}) }}">Edition</a>

    {{ include('customer/_delete_form.html.twig') }}

    <a href="{{ path('customer_index') }}">Retour au menu</a>

{% endblock %}
