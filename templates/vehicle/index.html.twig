{% extends 'base.html.twig' %}

{% block title %}Vehicles{% endblock %}

{% block body %}
    <h1>Vehicles</h1>
    <form method="post" action="{{ path('vehicle_index') }}">
        <div class="form-group">
            <label for="vehicleId">Search for contracts of a vehicle</label>
            <input type="text" id="vehicleId" name="vehicleId" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    {% if sqlData %}
        <h2>Vehicle contract</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>vehicle_uid</th>
                    <th>customer_uid</th>
                    <th>sign_datetime</th>
                    <th>locbegin_datetime</th>
                    <th>locend_datetime</th>
                    <th>returning_datetime</th>
                    <th>price</th>

                </tr>
            </thead>
            <tbody>
                {% for data in sqlData %}
                    <tr>
                        <td>{{ data.id }}</td>
                        <td>{{ data.vehicleUid }}</td>
                        <td>{{ data.customerUid }}</td>
                        <td>{{ data.signDatetime ? data.signDatetime|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ data.locbeginDatetime ? data.locbeginDatetime|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ data.locendDatetime ? data.locendDatetime|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ data.returningDatetime ? data.returningDatetime|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ data.price }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    {% if sqlData != true %}
      <h4>No contract found</h4>
    {% endif %}
    
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>immatriculation</th>
                <th>informations</th>
                <th>Kilom√©trage</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td>{{ vehicle._id }}</td>
                <td>{{ vehicle.licence_plate }}</td>
                <td>{{ vehicle.informations }}</td>
                <td>{{ vehicle.km }}</td>
                <td>
                  <a href="{{ path('vehicle_show', {'id': vehicle._id}) }}">show</a>
                  <a href="{{ path('vehicle_edit', {'id': vehicle._id}) }}">Edit</a>
                </td>
            </tr>
            {# <li>
                {{ customer.first_name }} {{ customer.second_name }}
                <a href="{{ path('customer_edit', {'id': customer._id}) }}">Edit</a>
                <a href="{{ path('customer_delete', {'id': customer._id}) }}">Delete</a>
            </li> #}
        {% endfor %}    

    </tbody>
    </table>        
    <a href="{{ path('vehicle_new') }}">Create new</a>
    <a href="{{ path('dashboard_index') }}">Back to Dashboard</a>
{% endblock %}
