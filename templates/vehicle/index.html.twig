{% extends 'base.html.twig' %}

{% block title %}Vehicles{% endblock %}

{% block body %}
    <h1>Vehicles</h1>

    <br/>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>immatriculation</th>
                <th>informations</th>
                <th>Kilométrage</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td>{{ vehicle._id }}</td>
                <td>{{ vehicle.licence_plate }}</td>
                <td>{{ vehicle.informations }}</td>
                <td>{{ vehicle.km }}</td>
                <td>
                  <a href="{{ path('vehicle_show', {'id': vehicle._id}) }}">Afficher</a>
                  <a href="{{ path('vehicle_edit', {'id': vehicle._id}) }}">Editer</a>
                </td>
            </tr>
            {# <li>
                {{ customer.first_name }} {{ customer.second_name }}
                <a href="{{ path('customer_edit', {'id': customer._id}) }}">Edit</a>
                <a href="{{ path('customer_delete', {'id': customer._id}) }}">Delete</a>
            </li> #}
        {% endfor %}    

    </tbody>
    </table>        
    <a href="{{ path('vehicle_new') }}">Nouveau véhicule</a>
    <a href="{{ path('dashboard_index') }}">Retour au menu</a>
{% endblock %}
