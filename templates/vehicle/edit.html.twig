        <label for="id" class="form-label required">Immatriculation</label>
        <input class="form-control mb-3" type="text" name="licence_plate" value="{{ vehicle.licence_plate }}" required>

        <label for="id" class="form-label required">Informations</label>
        <input class="form-control mb-3" type="text" name=" informations" value="{{ vehicle. informations }}" required>
        
        <label for="id" class="form-label required">Kilom√©trage</label>
        <input class="form-control mb-3" type="text" name="km" value="{{ vehicle.km }}" required>

