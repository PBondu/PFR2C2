{% extends 'base.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <h1>Contrat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contract.id }}</td>
            </tr>
            <tr>
                <th>Vehicle_uid</th>
                <td>{{ contract.vehicleUid }}</td>
            </tr>
            <tr>
                <th>Customer_uid</th>
                <td>{{ contract.customerUid }}</td>
            </tr>
            <tr>
                <th>Sign_datetime</th>
                <td>{{ contract.signDatetime ? contract.signDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Locbegin_datetime</th>
                <td>{{ contract.locbeginDatetime ? contract.locbeginDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Locend_datetime</th>
                <td>{{ contract.locendDatetime ? contract.locendDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Returning_datetime</th>
                <td>{{ contract.returningDatetime ? contract.returningDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ contract.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contract_edit', {'id': contract.id}) }}">Editer</a>

    {{ include('contract/_delete_form.html.twig') }}

    <a href="{{ path('app_contract_index') }}">Retour au menu</a>

{% endblock %}
