{% extends 'base.html.twig' %}

{% block title %}Liste des contrats{% endblock %}

{% block body %}
    <h1>Liste des contrats</h1>

    <br/>
  
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vehicle_uid</th>
                <th>Customer_uid</th>
                <th>Sign_datetime</th>
                <th>Locbegin_datetime</th>
                <th>Locend_datetime</th>
                <th>Returning_datetime</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr>
                <td>{{ contract.id }}</td>
                <td>{{ contract.vehicleUid }}</td>
                <td>{{ contract.customerUid }}</td>
                <td>{{ contract.signDatetime ? contract.signDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contract.locbeginDatetime ? contract.locbeginDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contract.locendDatetime ? contract.locendDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contract.returningDatetime ? contract.returningDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contract.price }}</td>
                <td>
                    <a href="{{ path('app_contract_show', {'id': contract.id}) }}">Afficher</a>
                    <a href="{{ path('app_contract_edit', {'id': contract.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">pas de contrats trouv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contract_new') }}">Nouveau contrat</a>
    <a href="{{ path('dashboard_index') }}">Retour au menu</a>
{% endblock %}
