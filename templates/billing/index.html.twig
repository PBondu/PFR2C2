{% extends 'base.html.twig' %}

{% block title %}Billing index{% endblock %}

{% block body %}
    <h1>Billing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contract_id</th>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for billing in billings %}
            <tr>
                <td>{{ billing.id }}</td>
                <td>{{ billing.ContractId }}</td>
                <td>{{ billing.Amount }}</td>
                <td>
                    <a href="{{ path('app_billing_show', {'id': billing.id}) }}">show</a>
                    <a href="{{ path('app_billing_edit', {'id': billing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_billing_new') }}">Create new</a>
    <a href="{{ path('dashboard_index') }}">Back to Dashboard</a>
{% endblock %}
